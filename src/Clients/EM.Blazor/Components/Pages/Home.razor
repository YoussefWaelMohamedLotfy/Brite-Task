@page "/"

<PageTitle>Home</PageTitle>

<div class="container py-5">
    <div class="row align-items-center mb-5">
        <div class="col-md-7">
            <h1 class="display-4 fw-bold text-primary">Welcome to Brite-Task!</h1>
            <p class="lead text-secondary">Your modern platform for managing employees, departments, and roles with ease.</p>
            <a href="Employees" class="btn btn-primary btn-lg mt-3 me-2">Get Started</a>
            <a href="Departments" class="btn btn-outline-secondary btn-lg mt-3">Learn More</a>
        </div>
        <div class="col-md-5 text-center">
            <!-- You can replace the src below with your own image -->
            <img src="/images/hero-task.svg" alt="Task Management" class="img-fluid" style="max-height: 300px;" />
        </div>
    </div>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <span class="bi bi-people display-5 text-primary mb-3"></span>
                    <h5 class="card-title">Employees</h5>
                    <p class="card-text">Manage your team efficiently and keep track of employee details.</p>
                    <a href="Employees" class="btn btn-outline-primary">View Employees</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <span class="bi bi-building display-5 text-success mb-3"></span>
                    <h5 class="card-title">Departments</h5>
                    <p class="card-text">Organize your company structure and manage departments seamlessly.</p>
                    <a href="Departments" class="btn btn-outline-success">View Departments</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <span class="bi bi-person-badge display-5 text-warning mb-3"></span>
                    <h5 class="card-title">Roles</h5>
                    <p class="card-text">Assign and manage roles to ensure proper access and responsibilities.</p>
                    <a href="Roles" class="btn btn-outline-warning">View Roles</a>
                </div>
            </div>
        </div>
    </div>
</div>
