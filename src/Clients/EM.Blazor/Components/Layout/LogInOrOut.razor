@implements IDisposable
@inject NavigationManager Navigation

<div class="top-row px-4">
    <AuthorizeView>
        <Authorized>
            <p>Welcome, @(context.User.FindFirst("name").Value)!</p>
            <form action="authentication/logout" method="post">
                <AntiforgeryToken />
                <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                <button type="submit" class="btn btn-secondary">Logout (Interactive Server)</button>
            </form>
        </Authorized>
        <NotAuthorized>
            <a class="btn btn-primary" href="authentication/login">
                <span class="bi bi-person-badge-nav-menu" aria-hidden="true"></span> Login with SSO (Interactive Server)
            </a>
        </NotAuthorized>
    </AuthorizeView>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = Navigation.Uri;
        Navigation.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = Navigation.Uri;
        StateHasChanged();
    }

    public void Dispose() => Navigation.LocationChanged -= OnLocationChanged;
}